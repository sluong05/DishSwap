{
  "expo": {
    "name": "DishSwap",
    "slug": "DishSwap",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/logos/DishSwap.png",
    "scheme": "dishswap",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera to let you take recipe photos.",
        "NSPhotoLibraryUsageDescription": "This app uses the photo library so you can select recipe images."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/logos/DishSwap.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to post your recipe"
        }
      ],
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
